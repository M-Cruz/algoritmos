import java.util.*;

public class Main {
    public static void main(String[] args) throws Exception {
        int numero=7;
        
        for(int j=1;j<=numero;j++){
            String num="";
            for(int i=numero;i>j;i--){
                num+=" ";
            }
            for(int i=0;i<j*2-1;i++){
                num+="x";
            }
            System.out.println(num);
        }
    }
}
